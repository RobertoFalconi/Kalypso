<head>
  <header class="navbar navbar-fixed-top navbar-inverse">
<body>


    <div class="container">
      <% if logged_in? %>
        <%= link_to "kalypso", '#', id: "logo" %>
      <% else %>
        <%= link_to "kalypso", root_path, id: "logo" %>
      <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        
        <% if logged_in? %>
		  <li><%= link_to "Home" , current_user, id: "menusopra" %></li>

          <% if current_user.admin? %>
                    <li><%= link_to "Users", users_path, id: "menusopra" %></li>
          <% end %>
		  
          <li class="dropdown" >
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" id = "menusopra">Settings<b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Update your profile", edit_user_path(current_user) %></li>
              <% if current_user.admin? %>
                <li><%= link_to "Special options", specialoptions_url %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
		  
		  
        <% else %>
		  <li><%= link_to "Home", root_path, id: "menusopra" %></li>
          <li><%= link_to "Login", login_path, id: "menusopra" %></li>
          <li><%= link_to "Sign up", signup_path, id: "menusopra" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
</head>
