<% provide(:title, "Restore") %>
<% provide(:button_text, 'Save changes') %>

<h1>Restore yuour password</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
 
  <%= form_for(:session, url: restore_path) do |f| %>
 
    <%= f.label :email, "Insert your email:" %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :question, "Select your question"%>
    <%= f.select :question, options_for_select([['Domanda_1',1],['Domanda_2',2],['Domanda_3',3],['Domanda_4',4]]) %>
	  
    <%= f.label :answer %>
    <%= f.text_field :answer, class: 'form-control' %>	  
	  
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <% end %>
	  
  </div>
</div>
